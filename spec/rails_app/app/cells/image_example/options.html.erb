<div class="mercury-display-pane" style='width: 500px;'>
  <%= form_for @snippet, :url => '#', html: { class: 'form-horizontal'} do |f| %>
    <fieldset>
      <legend>Image Example Snippet</legend>
      <div class="control-group">
        <%= f.label :title, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :summary, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :summary %>
        </div>
      </div>
      <%= f.hidden_field :image_1 %>
    </fieldset>
    <div class="form-actions mercury-display-controls">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
