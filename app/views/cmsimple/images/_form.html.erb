<%= form_for @image, :html => { :class => "form-horizontal" } do |f| %>
  <div class="form-inputs mercury-display-pane-container">
    <fieldset>
      <div class="control-group">
        <%= f.label :title, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :attachment, class: 'control-label' %>
        <div class="controls">
          <%= f.file_field :attachment %>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="form-actions mercury-display-controls">
    <%= f.submit class: 'btn btn-primary', label: 'Upload' %>
  </div>
<% end %>
